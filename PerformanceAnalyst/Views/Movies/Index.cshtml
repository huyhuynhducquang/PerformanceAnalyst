@{
    ViewBag.Title = "Movie List";
    Layout = "~/Views/Shared/_Layout.cshtml"; // You can specify your layout page here
}

<h2>Movie List</h2>

<a asp-controller="Movies" asp-action="Create">Create a movie</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Author</td>
                <td>
                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
                    <a asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>