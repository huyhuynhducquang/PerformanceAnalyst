@model GenerateCirclesModel
@{
    ViewData["Title"] = "Prime Numbers Calculator";
}

<style>
        
    .circle {
        border-radius: 50%;
        display: inline-block;
        margin: 5px;
        position: relative;
    }
</style>

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="GenerateCircles">
    <div class="form-group">
        <label for="minValue">Minimum Value:</label>
        <input type="number" class="form-control" id="minValue" name="minValue" required>
    </div>
    <div class="form-group">
        <label for="maxValue">Maximum Value:</label>
        <input type="number" class="form-control" id="maxValue" name="maxValue" required>
    </div>
    <button type="submit" class="btn btn-primary">Calculate Primes</button>
</form>

<div class="circle-container">
    @foreach(var circle in Model.Circles)
    {
        <div class="circle" style="background-color: @circle.Color; width: @circle.Radius; height: @circle.Radius"  >
        </div>
    }
</div>